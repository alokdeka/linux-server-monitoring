# Database Configuration
POSTGRES_DB=monitoring
POSTGRES_USER=monitoring_user
POSTGRES_PASSWORD=monitoring_pass
POSTGRES_PORT=5432

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# Alert Configuration
ALERT_CPU_THRESHOLD=90.0
ALERT_DISK_THRESHOLD=80.0
ALERT_OFFLINE_TIMEOUT=300

# Webhook Configuration (comma-separated URLs)
WEBHOOK_URLS=

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Database URL (automatically constructed from above values)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_API_URL=http://localhost:8000
DASHBOARD_WS_URL=ws://localhost:8000
DASHBOARD_TITLE=Server Monitoring Dashboard
DASHBOARD_REFRESH_INTERVAL=30000
DASHBOARD_DEBUG=false