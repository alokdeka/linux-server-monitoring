{
  "name": "dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "npm run build && npm run build:replace-env && npm run build:analyze",
    "build:replace-env": "sed -i 's/%VITE_APP_TITLE%/Server Monitoring Dashboard/g' dist/index.html",
    "build:docker": "vite build",
    "build:analyze": "npx vite-bundle-analyzer dist/assets/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest --run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest --run src/test/integration/**/*.test.{ts,tsx}",
    "test:property": "vitest --run src/test/property-tests-simple.test.tsx",
    "test:performance": "vitest --run src/test/performance/**/*.test.{ts,tsx}",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:property && npm run test:performance && npm run test:e2e",
    "preview": "vite preview",
    "perf:audit": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:monitor": "node -e \"console.log('Performance monitoring enabled in production build')\"",
    "size:check": "npm run build && du -sh dist/",
    "security:audit": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.36",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.10.1",
    "recharts": "^3.6.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.4.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}